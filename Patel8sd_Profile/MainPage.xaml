<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="patel8sd_Profile.MainPage"
             Title="Signup">
    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
        <Label Text="Create an Account" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20"/>

        <Entry x:Name="usernameEntry" Placeholder="Username" Keyboard="Text" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

        <Button Text="Sign Up" Clicked="OnSignUpClicked" Margin="0,10,0,0"/>

        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>