<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="patel8sd_Profile.ProfilePage"
             Title="Profile">
    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome," FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Label x:Name="UsernameLabel" FontSize="Medium" HorizontalOptions="Center"/>
        <Label Text="Your email:" FontSize="Small" Margin="0,15,0,0" HorizontalOptions="Center"/>
        <Label x:Name="EmailLabel" FontSize="Medium" HorizontalOptions="Center"/>
        <Button Text="Sign Out" Clicked="OnSignOutClicked" Margin="0,30,0,0"/>
    </VerticalStackLayout>
</ContentPage>